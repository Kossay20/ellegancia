{{ 'component-icons.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign sectionId = section.id | remove: '-'
  assign enable_animations = section.settings.enable_animations
  assign animation = section.settings.animation
  assign layout = section.settings.layout
  assign layout_style = section.settings.layout_style
  assign icon__type = section.settings.icon__type

  if section.settings.preshot_swiper and layout == 'swiper'
    if section.blocks.size > section.settings.slides_on_desktop
      assign slidesPerViewDesktop = section.settings.slides_on_desktop | plus: 0.4
    else
      assign slidesPerViewDesktop = section.settings.slides_on_desktop
    endif
    assign slidesPerViewTablet = section.settings.slides_on_tablet | plus: 0.4
    if section.settings.slides_on_mobile > 1
      assign slidesPerViewMobile = section.settings.slides_on_mobile
    else
      assign slidesPerViewMobile = section.settings.slides_on_mobile | plus: 0.4
    endif
  else
    assign slidesPerViewDesktop = section.settings.slides_on_desktop
    assign slidesPerViewTablet = section.settings.slides_on_tablet
    assign slidesPerViewMobile = section.settings.slides_on_mobile
  endif
-%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_sm }}px;
    padding-bottom: {{ section.settings.padding_bottom_sm }}px;
  }

  .section-{{ section.id }}-padding .icon__block .icon,
  .section-{{ section.id }}-padding .icon__block img {
    width: {{ section.settings.icon_width }}%;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- capture sizes -%}
  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
  (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
{%- endcapture -%}

{%- render 'separator-top', section: section -%}

<div
  id="{{ section.settings.section_id }}"
  class="color-{{ section.settings.color_palette }} section-{{ section.id }}-padding"
  data-section-id="{{ section.id }}"
>
  <div class="container container--{{ section.settings.layout_width }}">
    <div class="icons">
      {%- if section.settings.heading != blank -%}
        {%- render 'heading',
          alignment: section.settings.alignment,
          enable_animations: section.settings.enable_animations,
          animation: section.settings.animation,
          subheading: section.settings.subheading,
          heading: section.settings.heading,
          description: section.settings.description,
          heading_class: 'icons__heading',
          heading_style: section.settings.heading_style
        -%}
      {%- endif -%}
      <div class="icons__wrapper--swiper">
        <div
          id="icons__swiper_{{ sectionId }}"
          class="
            {% if layout == "swiper" %}swiper icons__swiper{% unless section.settings.pagination %} swiper_no_pagination{% endunless %}{% else %}icons__grid{% endif %}
          "
          {% if layout == 'swiper' %}
            {% render 'swiper-data-editor', numberOfSlides: section.blocks.size %}
          {% endif -%}
        >
          <div class="{% if layout == "swiper" %}swiper-wrapper{% else %}icons__wrapper icons__wrapper--{{ slidesPerViewMobile }}-phone icons__wrapper--{{ slidesPerViewTablet }}-tablet icons__wrapper--{{ slidesPerViewDesktop }}-desktop{% endif %}">
            {%- for block in section.blocks -%}
              <div
                class="{% if layout == "swiper" %}swiper-slide {% endif %}icons__item"
                {%- render 'animation', enable_animations: enable_animations, animation: animation -%}
                {{ block.shopify_attributes }}
              >
                <div
                  class="{% if layout_style == 'card' %}content-container {% endif %}icon__block{% if icon__type == "mini" %} icon__mini{% endif %}{% if section.settings.center_icons %} center{% endif %}"
                >
                  {%- if block.settings.image_custom != blank -%}
                    {{
                      block.settings.image_custom
                      | image_url: width: 600
                      | image_tag: loading: 'lazy', sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                    }}
                  {%- else -%}
                    {%- render 'icons', icon: block.settings.icon -%}
                  {%- endif -%}
                  {%- if block.settings.heading != blank -%}
                    <h3 class="icon__heading">{{ block.settings.heading }}</h3>
                  {%- endif -%}
                  {%- if block.settings.description != blank and icon__type == 'complete' -%}
                    <p class="icon__description">{{ block.settings.description }}</p>
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
        {%- liquid
          if layout == 'swiper'
            assign swiperAutoplayDelay = section.settings.speed | times: 1000
            assign swiperAutoplay = 'autoplay:{pauseOnMouseEnter:true,enabled:' | append: section.settings.autoplay | append: ', delay:' | append: swiperAutoplayDelay | append: '},'
            assign swiperEl = "'#icons__swiper_" | append: sectionId | append: "'"
            assign swiperOptions ="loop:" | append: section.settings.loop | append: ",mousewheel:{forceToAxis:true},spaceBetween:" | append: settings.spacing_grid_horizontal | append: ",slidesPerView:" | append: slidesPerViewMobile | append: ",autoHeight:true," | append: swiperAutoplay | append: "breakpoints:{650:{slidesPerView:" | append: slidesPerViewTablet | append: ",},990:{slidesPerView:" | append: slidesPerViewDesktop | append: ",}},"
            render 'swiper-theme-editor', sectionId: sectionId, swiperVariant: 'icons__swiper_', swiperEl: swiperEl, swiperOptions: swiperOptions, navigation: section.settings.navigation, pagination: section.settings.pagination
          endif
        -%}
      </div>
    </div>
  </div>
</div>

{%- render 'separator-bottom', section: section -%}

